# Application
APP_NAME=IT-Admin
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_LOG_LEVEL=debug

# Database
DATABASE_URL=postgres://admin:secure_password@localhost:5432/itadmin

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=86400  # 24 hours in seconds

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Active Directory (LDAP)
AD_ENABLED=true
AD_SERVER=ldap://dc.example.com:389
AD_DOMAIN=example.com
AD_BASE_DN=DC=example,DC=com
AD_BIND_DN=CN=Admin,CN=Users,DC=example,DC=com
AD_BIND_PASSWORD=your-ad-password
AD_USE_TLS=true

# MikroTik
MIKROTIK_ENABLED=false
MIKROTIK_HOST=192.168.1.1
MIKROTIK_PORT=8728
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=mikrotik-password

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@it-admin.local

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./storage/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds
